{
  "name": "swiss-army-utils",
  "version": "0.8.1",
  "description": "General typescript utils.",
  "type": "module",
  "workspaces": [
    "examples/*"
  ],
  "files": [
    "dist"
  ],
  "exports": {
    "./*": {
      "default": "./dist/esm/*.js",
      "import": "./dist/esm/*.js",
      "module": "./dist/esm/*.js",
      "require": "./dist/cjs/*.js"
    }
  },
  "private": false,
  "scripts": {
    "test": "jest",
    "test:types": "tsc --noEmit",
    "lint": "eslint ./src",
    "build": "rimraf dist && tsc -b tsconfig.esm.build.json -b tsconfig.cjs.build.json",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\"",
    "updateReadme": "npm run build && tsx scripts/updateReadme.ts",
    "checks": "npm run format:check && npm run lint && npm run build && npm run test",
    "dev": "npm run format && npm run lint && npm run build && npm run updateReadme && npm run test",
    "prepublishOnly": "npm run checks",
    "preversion": "npm run checks"
  },
  "keywords": [
    "typescript",
    "utilities"
  ],
  "author": "Mattias Ahls√©n",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/jest": "^29.5.14",
    "@types/jsdoc-to-markdown": "^7.0.6",
    "@types/node": "^22.10.2",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^16.4.0",
    "jest": "^29.7.0",
    "jsdoc-to-markdown": "^9.1.3",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "tsx": "^4.20.6",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.2"
  },
  "dependencies": {
    "type-fest": "^4.41.0",
    "zod": "^4.0.5"
  }
}
